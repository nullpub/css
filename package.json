{
  "name": "@nll/css",
  "version": "3.7.0",
  "description": "A bunch of css utility classes",
  "main": "dist/main.css",
  "scripts": {
    "start": "postcss src/main.css -o dist/main.css -w",
    "build": "concurrently --no-color \"npm:build:*\" && npm run gzip",
    "build:main": "postcss src/main.css -o dist/main.css",
    "build:utilities:borders": "postcss src/utilities/borders.css -o dist/borders.css",
    "build:utilities:colors": "postcss src/utilities/colors.css -o dist/colors.css",
    "build:utilities:display": "postcss src/utilities/display.css -o dist/display.css",
    "build:utilities:flex": "postcss src/utilities/flex.css -o dist/flex.css",
    "build:utilities:font": "postcss src/utilities/font.css -o dist/font.css",
    "build:utilities:margin": "postcss src/utilities/margin.css -o dist/margin.css",
    "build:utilities:padding": "postcss src/utilities/padding.css -o dist/padding.css",
    "build:utilities:text": "postcss src/utilities/text.css -o dist/text.css",
    "gzip": "gzip -k -f dist/*.css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nullpub/css.git"
  },
  "keywords": [
    "css",
    "postcss",
    "utility"
  ],
  "author": "Brandon Blaylock (brandon@null.pub)",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/nullpub/css/issues"
  },
  "homepage": "https://github.com/nullpub/css#readme",
  "devDependencies": {
    "bootstrap": "^4.1.3",
    "concurrently": "^4.1.0",
    "cssnano": "^4.1.7",
    "postcss-cli": "^6.0.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-each": "^0.10.0",
    "postcss-extend-rule": "^2.0.0",
    "postcss-for": "^2.1.1",
    "postcss-import": "^12.0.1",
    "postcss-simple-vars": "^5.0.1",
    "postcss-style-guide": "^0.14.0"
  }
}
