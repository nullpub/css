{
  "name": "@nll/css",
  "version": "4.0.6",
  "description": "A bunch of css utility classes",
  "main": "dist/main.css",
  "scripts": {
    "start": "postcss src/main.css -o dist/main.css -w",
    "build": "concurrently --no-color \"npm:build:*\" && npm run gzip",
    "build:fluid": "postcss src/fluid.css -o dist/fluid.css",
    "build:main": "postcss src/main.css -o dist/main.css",
    "build:minimal": "postcss src/minimal.css -o dist/minimal.css",
    "build:shortcuts:flex": "postcss src/shortcuts/flex.css -o dist/shortcuts-flex.css",
    "gzip": "gzip -k -f dist/*.css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nullpub/css.git"
  },
  "keywords": [
    "css",
    "postcss",
    "utility"
  ],
  "author": "Brandon Blaylock (brandon@null.pub)",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/nullpub/css/issues"
  },
  "homepage": "https://github.com/nullpub/css#readme",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "cssnano": "^4.1.7",
    "postcss-cli": "^6.0.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-each": "^0.10.0",
    "postcss-extend-rule": "^2.0.0",
    "postcss-for": "^2.1.1",
    "postcss-import": "^12.0.1",
    "postcss-simple-vars": "^5.0.1",
    "postcss-style-guide": "^0.14.0"
  }
}
